{
  "name": "rikaichamp",
  "version": "0.1.16",
  "description": "Translate Japanese by hovering over words.",
  "scripts": {
    "build": "webpack",
    "build:chrome": "webpack --env.target=chrome",
    "lint": "web-ext lint",
    "package": "yarn build && web-ext build --overwrite-dest -a dist-firefox-package",
    "package:chrome": "yarn build:chrome && web-ext build --overwrite-dest -s dist-chrome -a dist-chrome-package",
    "test": "yarn lint && yarn test:unit && yarn test:browser",
    "test:unit": "jest",
    "test:browser": "karma start --single-run",
    "start": "webpack -w",
    "start:chrome": "webpack -w --env.target=chrome",
    "update-db": "node utils/update-db",
    "version": "node utils/sync-manifest-version && git add manifest.json.src",
    "zip-src": "node utils/zip-src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/birtles/rikaichamp.git"
  },
  "keywords": [
    "rikaichan",
    "rikaikun",
    "japanese",
    "dictionary",
    "translation"
  ],
  "author": "Brian Birtles",
  "bugs": {
    "url": "https://github.com/birtles/rikaichamp/issues"
  },
  "homepage": "https://github.com/birtles/rikaichamp#readme",
  "devDependencies": {
    "@actions/core": "^1.2.2",
    "@types/chai": "^4.2.9",
    "@types/jest": "^25.1.3",
    "@types/mocha": "^7.0.1",
    "archiver": "^3.1.1",
    "byline": "^5.0.0",
    "chai": "^4.2.0",
    "combined-stream2": "^1.1.2",
    "copy-webpack-plugin": "^5.1.1",
    "file-loader": "^5.1.0",
    "iconv-lite": "^0.5.1",
    "jest": "^25.1.0",
    "karma": "^4.4.1",
    "karma-chai": "^0.1.0",
    "karma-firefox-launcher": "^1.3.0",
    "karma-mocha": "^1.3.0",
    "karma-webpack": "^4.0.2",
    "mocha": "^7.0.1",
    "semver-parser": "^3.0.4",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "web-ext-types": "github:michael-zapata/web-ext-types",
    "web-ext-webpack-plugin": "github:hiikezoe/web-ext-webpack-plugin",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-preprocessor": "^0.1.12"
  },
  "dependencies": {
    "@birchill/hikibiki-data": "^2.2.2",
    "@bugsnag/js": "^6.5.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "typescript": "^3.8.2",
    "web-ext": "^4.1.0"
  },
  "webExt": {
    "sourceDir": "dist-firefox"
  },
  "jest": {
    "roots": [
      "src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".test.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  }
}
