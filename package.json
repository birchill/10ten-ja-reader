{
  "name": "rikaichamp",
  "version": "0.5.1",
  "description": "Translate Japanese by hovering over words.",
  "scripts": {
    "build": "webpack",
    "build:chrome": "webpack --env target=chrome",
    "check-keys": "ts-node utils/check-keys",
    "lint": "web-ext lint",
    "package": "yarn build && web-ext build --overwrite-dest -a dist-firefox-package",
    "package:chrome": "yarn build:chrome && web-ext build --overwrite-dest -s dist-chrome -a dist-chrome-package",
    "postinstall": "husky install",
    "test": "yarn lint && yarn test:unit && yarn test:browser",
    "test:unit": "jest",
    "test:browser": "karma start --single-run",
    "sort-i18n-keys": "ts-node utils/sort-keys",
    "start": "webpack -w",
    "start:chrome": "webpack -w --env target=chrome",
    "update-db": "node utils/update-db",
    "update-snapshot": "ts-node utils/update-snapshot",
    "version": "node utils/sync-manifest-version && git add manifest.json.src",
    "zip-src": "node utils/zip-src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/birtles/rikaichamp.git"
  },
  "keywords": [
    "rikaichan",
    "rikaikun",
    "japanese",
    "dictionary",
    "translation"
  ],
  "author": "Brian Birtles",
  "bugs": {
    "url": "https://github.com/birtles/rikaichamp/issues"
  },
  "homepage": "https://github.com/birtles/rikaichamp#readme",
  "devDependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "@types/chai": "^4.2.16",
    "@types/jest": "^26.0.20",
    "@types/karma": "^6.3.0",
    "@types/karma-webpack": "^2.0.9",
    "@types/mocha": "^8.2.2",
    "@types/split2": "^2.1.6",
    "@types/yargs": "^16.0.1",
    "archiver": "^5.3.0",
    "byline": "^5.0.0",
    "chai": "^4.3.4",
    "combined-stream2": "^1.1.2",
    "copy-webpack-plugin": "^8.1.0",
    "css-loader": "^5.2.0",
    "fast-glob": "^3.2.5",
    "file-loader": "^6.2.0",
    "iconv-lite": "^0.6.2",
    "jest": "^25.5.4",
    "karma": "^6.3.2",
    "karma-chai": "^0.1.0",
    "karma-firefox-launcher": "^2.1.0",
    "karma-mocha": "^2.0.1",
    "karma-webpack": "^5.0.0",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1",
    "semver-parser": "^3.1.0",
    "source-map-loader": "^2.0.1",
    "split2": "^3.2.2",
    "ts-jest": "^25.5.1",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.1.1",
    "web-ext-plugin": "^1.1.0",
    "web-ext-types": "github:michael-zapata/web-ext-types",
    "webpack": "^5.27.2",
    "webpack-bugsnag-plugins": "^1.6.0",
    "webpack-cli": "^4.6.0",
    "webpack-preprocessor": "^0.1.12",
    "yargs": "^16.2.0"
  },
  "dependencies": {
    "@birchill/hikibiki-data": "^7.2.2",
    "@birchill/normal-jp": "^1.2.1",
    "@bugsnag/js": "^7.9.2",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "lru_map": "^0.4.1",
    "typescript": "^4.2.4",
    "web-ext": "^6.0.0"
  },
  "webExt": {
    "sourceDir": "dist-firefox"
  },
  "jest": {
    "roots": [
      "src"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": ".test.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ],
    "moduleNameMapper": {
      "^idb/with-async-ittr$": "idb/with-async-ittr-cjs"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ],
    "_locales/**/messages.json": [
      "yarn sort-i18n-keys"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  }
}
