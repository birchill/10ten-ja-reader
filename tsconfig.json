{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "es2020", "ES2020.Intl", "webworker"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "extension",
    "pretty": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2019"
  },
  "include": ["./src/**/*"],
  "exclude": ["./utils/sync-manifest-version.mts"]
}
